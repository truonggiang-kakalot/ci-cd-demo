pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Đang build ứng dụng...'
            }
        }
        stage('Test') {
            steps {
                echo 'Đang test ứng dụng...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Triển khai ứng dụng!'
            }
        }
    }
}
